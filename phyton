print("Selamat Datang ke Sistem Tempahan Hotel The Pacific")
print("Sila Masukkan Maklumat Berkenaan")
nama = input("Nama : ")
print("Hi", nama)
print(".")
print("Terdapat 3 Pilihan Bilik Ditawarkan kepada Anda :")
print("Superior Twin Room RM122/malam")
print("Deluxe Twin Room RM154/malam")
print("Deluxe Double Room RM200/malam")
print("Diskaun Sebanyak 20% bagi Tempahan Melebihi RM500 dan Keatas")

bilik = str(input("Masukkan Pilihan Bilik Anda : "))
tempoh = int(input("Bilangan Hari Tempahan : "))

if bilik == ("Superior Twin Room") :
    harga1 = tempoh*122
if harga1 > 500 :
    harga2 = harga1*20/100
    harga3 = harga1 - harga2
    print("Jumlah Pembayaran Selepas 20% diskaun ialah :", harga3)
else: print("Jumlah Pembayaran ialah :", harga1)

if bilik == ("Deluxe Twin Room") :
    harga1 = tempoh*154
if harga1 > 500 :
    harga2 = harga1*20/100
    harga3 = harga1 - harga2
    print("Jumlah Pembayaran Selepas 20% diskaun ialah :", harga3)
else: print("Jumlah Pembayaran ialah :", harga1)

if bilik == ("Deluxe Double Room") :
    harga1 = tempoh*200
if harga1 > 500 :
    harga2 = harga1*20/100
    harga3 = harga1 - harga2
    print("Jumlah Pembayaran Selepas 20% diskaun ialah :", harga3)
else: print("Jumlah Pembayaran ialah :", harga1)

print("Terima Kasih")
